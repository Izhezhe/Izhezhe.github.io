<table cellpadding="0" cellspacing="0">
                  <tr>
                        <th>参评时间</th>
                        <th>案件名称</th>
                        <th>案号</th>
                        <th>状态</th>
                        <th>操作</th>
                  </tr>
                  {{~it :value:index}}
                        <tr dataid="{{=value.caseId}}">
                              <td class="time">
                                  {{?value.beginTime}}{{=format(value.beginTime)}}{{?}}
                              </td>
                              <td class="case-name"><div class="ell case_nameDot" > {{=value.title}}</div></td>
                              <td class="case_noDot case-number"><div class="ell">{{=value.caseNo}}</div></td>

                              {{ if(value.liveState == 0) { }}
                                    <td>预告</td>
                              {{   }else if(value.liveState == 1){  }}
                                    <td>正在直播</td>
                              {{   }else if(value.liveState == 2){  }}
                                    <td>案件回顾</td>

                              {{   }else { }}
                                    <td></td>    
                              {{ } }} 


                              <td class="check">
                                    <span class="selectDot">选择</span>
                              </td>
                        </tr>
                  {{~}}
</table>