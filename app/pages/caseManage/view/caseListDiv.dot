<table cellpadding="0" cellspacing="0">
                  <tr>
                        <th>发布时间</th>
                        <th>案件名称</th>
                        <th>案号</th>
                        <th>状态</th>
                        <th>操作</th>
                  </tr>
            {{~it :value:index}}
                  <tr>
                        <td>{{?value.createTime}}{{=format(value.createTime)}}{{?}}</td>
                        <td class="case-name"><div class="ell">{{?value.title}}{{=value.title}}{{?}}</div></td>
                        <td style="width:240px;"><div class="ell" style="width:240px;">{{?value.caseNo}}{{=value.caseNo}}{{?}}</div></td>
                         {{? value.liveState===0 }}
                         <td>案件预告</td>
                         {{?? value.liveState===1}}
                         <td>直播中</td>
                         {{?? value.liveState===3}}
                         <td>案件回顾</td>
                         {{?}}
                        <td class="check">
                              <span onclick="caseSet.checkCase({{=value.caseId}},{{=value.title}})">选择</span>
                        </td>
                  </tr>
            {{~}}
            </table>